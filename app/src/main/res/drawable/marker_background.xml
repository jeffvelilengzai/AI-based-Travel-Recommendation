<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#CC000000"/> <!-- Semi-transparent black -->

    <!-- Border radius -->
    <corners android:radius="8dp"/>

    <!-- Optional: Border color and width -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF"/> <!-- White border -->

    <!-- Optional: Padding inside the shape -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
