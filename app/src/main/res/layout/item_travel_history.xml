<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:background="?attr/colorBackgroundFloating">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/history_background">

        <!-- Title TextView -->
        <TextView
            android:id="@+id/textViewTravelSelection"
            android:text="Travel Selection"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textColor="?attr/colorOnBackground"/>

        <!-- Hotel TextView -->
        <TextView
            android:id="@+id/textViewHotels"
            android:text="Hotels"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="?attr/colorOnBackground"/>

        <!-- Restaurant TextView -->
        <TextView
            android:id="@+id/textViewRestaurants"
            android:text="Restaurants"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="?attr/colorOnBackground"/>

        <!-- Attraction TextView -->
        <TextView
            android:id="@+id/textViewAttractions"
            android:text="Attractions"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/colorOnBackground"/>

        <!-- Delete Button -->
        <Button
            android:id="@+id/buttonDelete"
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorAccent"
            android:textColor="@android:color/white"
            android:layout_gravity="end"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
